<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="dongster.cameranostest.Result">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_height="130dp"
                android:layout_width="40dp"
                />

            <TextView
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:background="@drawable/costumer"
                />
            <TextView
                android:layout_height="130dp"
                android:layout_width="0dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="#70a3eb"
                    android:id="@+id/OCR"
                    android:textSize="25dp"
                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:id="@+id/Result"
                    android:background="#70a3eb"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    />

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/moreb"
        android:id="@+id/More_info"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />

    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/storet"
        />
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/Storelist"
        android:layout_gravity="center"
        android:textSize="13dp"
        android:background="@drawable/back"
        />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="5dp"

        />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="330dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:background="@drawable/back1"
            android:textSize="13dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/menub"
        />
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:id="@+id/MenuList"
        android:background="@drawable/back"
        />

    </LinearLayout>
</ScrollView>
