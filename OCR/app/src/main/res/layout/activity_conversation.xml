<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="dongster.cameranostest.Conversation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/basic_ex"
            android:layout_weight="1"
            android:drawableTop="@drawable/b1"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/airport_ex"
            android:layout_weight="1"
            android:drawableTop="@drawable/b2"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/restaurant_ex"
            android:layout_weight="1"
            android:drawableTop="@drawable/b3"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/traffic_ex"
            android:layout_weight="1"
            android:drawableTop="@drawable/b4"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/b5"
            android:background="#ffffff"
            android:id="@+id/accommodation_ex"
            android:scaleType="fitCenter" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shopping_ex"
            android:drawableTop="@drawable/b6"
            android:background="#ffffff"
            android:layout_weight="1"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tourism_ex"
            android:background="#ffffff"
            android:drawableTop="@drawable/b7"
            android:scaleType="fitCenter"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:id="@+id/emergency_ex"
            android:background="#ffffff"
            android:drawableTop="@drawable/b8"
            android:scaleType="fitCenter" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>
